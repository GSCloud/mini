      <img alt="NEW LOGIN" title="NEW LOGIN" src="/img/google_signin.png">
    </a>
    {{/local_goauth_redirect}}
    {{/LOCALHOST}}

    {{^LOCALHOST}}
    {{#goauth_redirect}}
    <a class="oauth" href="{{ goauth_redirect }}?relogin">
      <img alt="NEW LOGIN" title="NEW LOGIN" src="/img/google_signin.png">
    </a>
    {{/goauth_redirect}}
    {{/LOCALHOST}}

  </div>
