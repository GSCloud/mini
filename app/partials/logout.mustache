<div class="container">
  <div class="center">

    <a class="oauth" href="/logout">
      <img alt="LOGOUT" title="LOGOUT" src="/img/g.png" height=32>
      <b class="bla">LOGOUT</b>
    </a>
    <br>

    <b>{{ user.name }}</b><br>
    <small>{{ user.email }}</small><br>

    {{#LOCALHOST}}
    {{#local_goauth_redirect}}
