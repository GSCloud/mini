<style>
{{>body_css.mustache}}
{{>_body_css_debug.mustache}}
</style>

<div class="container center">
  <section class="login-section">
    {{^user.id}}{{>login}}{{/user.id}}
  </section>
  <h1 class="hidden">{{ l.title }}</h1>
  <h2>{{ l.title }}</h2>
</div>
<div class="container">
  <p>{{ l.readme }}</p>
</div>
<section class="login-section">
  {{#user.id}}{{>logout}}{{/user.id}}
</section>

<script>
(function (w, $, undefined) {
  'use strict';

  // add nonce to all anchors
  $('.container').find('a').each(function() {
    var h = $(this).attr('href');
    if (h.indexOf('?') == -1) $(this).attr('href', h + '?nonce=' + Math.round(Math.random() * 10000));
  });

})(window, $);
</script>