<div class="clearfix" style="padding:1rem"></div>

{{^user.id}}
<div class="container">
  <div class="float-right center">
    {{>login}}
    <a id="fullscreen" class="button" href="javascript:void(0);" onclick="blur();"><i class="material-icons md-18">fullscreen</i> fullscreen</a>
  </div>
  <div class="row">
    <div class="column">
      <h1 class="hidden">{{ l.title }}</h1>
      <h2>{{ l.title }}</h2>
      <p>{{ l.readme }}</p>
    </div>
  </div>
</div>
{{/user.id}}

{{#user.id}}
<div class="container">
  <div class="row">
    <div class="column column-20 center">
      {{>logout}}
      <a id="fullscreen" class="button" href="javascript:void(0);" onclick="blur();"><i class="material-icons md-18">fullscreen</i> fullscreen</a>
    </div>
    <div class="column column-80">
      <h1 class="hidden">{{ l.title }}</h1>
      <h2>{{ l.title }}</h2>
      <p>{{ l.readme }}</p>
    </div>
  </div>
</div>
{{/user.id}}

<script>
(function (w, $, undefined) {
  'use strict';

  // *** DELAYED FUNCTIONS ***

  GSC._fn.push(function () {
    // add nonce to all anchors
    $('.container').find('a').each(function() {
      var h = $(this).attr('href');
      var nonce = '?nonce=' + Math.round(Math.random() * 10000);
      if ((h.indexOf('?') == -1) && (h.indexOf('http') != -1)) {
        $(this).attr('href', h + nonce);
      }
    });
  });

  GSC._fn.push(function () {
    // action on fullscreen button
    $("#fullscreen").click(function () {
      GSC.FullScreen()
    });
  });

})(window, $);

</script>