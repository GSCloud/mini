/* main CSS */
body{width:100%;display:block;font-family:'IBM Plex Mono',monospace}
.hidden{display:none}
.material-icons.md-18{font-size:18px}
.material-icons.md-24{font-size:24px}
.material-icons.md-36{font-size:36px}
.material-icons.md-48{font-size:48px}
.container{display:block;margin:1em}
.login-section{float:right;margin:1em;padding:1em;background-color:#eee;display:block}
.center{text-align:center}
.right{float:right}
.left{float:left}
#fullscreen{cursor:pointer;border:1px solid #444;display:inline;padding:10px}
a{color:#800;font-weight:700;-webkit-transition:-webkit-transform .2s;transition:transform .2s;display:inline-block;text-decoration:none;position:relative}
a:hover{-webkit-transform:scale(.9);transform:scale(.9)}
a::before{position:absolute;top:-2px;left:-7px;box-sizing:content-box;padding:0 5px;width:100%;height:100%;border:2px solid red;content:'';opacity:0;-webkit-transition:opacity .1s,-webkit-transform .1s;transition:opacity .1s,transform .2s;-webkit-transform:scale(.9);transform:scale(.9)}
a:hover::before{opacity:1;-webkit-transform:scale(1.1);transform:scale(1.1)}
